{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "rootDir": ".",
    "outDir": "dist",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
  },

  "include": [
    "./src/**/*.ts", 
    "./tests/**/*.ts",
  ],
  
  "exclude": ["**/*.(spec|test).ts", "node_modules"],
}