{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
  },

  "include": [
    "**/*.ts", 
    "./tests/**/*.ts",
  ],
  
  "exclude": [
    "node_modules"
  ]
}